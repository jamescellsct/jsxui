{
  "name": "jsxui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel",
    "develop": "lerna run develop --parallel",
    "babel": "yarn workspace @jsxui/babel-plugin",
    "editor": "yarn workspace @jsxui/editor",
    "react": "yarn workspace @jsxui/react",
    "site": "yarn workspace site"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "babel-plugin-tester": "^10.1.0",
    "babel-test": "^0.2.4",
    "esbuild": "^0.12.9",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "npm-dts": "^1.3.9",
    "prettier": "^2.3.1",
    "typescript": "^4.3.4"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
