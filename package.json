{
  "name": "jsxui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "rimraf node_modules && rimraf */**/node_modules && rimraf */**/dist && rimraf */**/.jsxui",
    "babel": "yarn workspace @jsxui/babel-plugin",
    "cli": "yarn workspace @jsxui/cli",
    "docs": "yarn workspace docs",
    "editor": "yarn workspace @jsxui/editor",
    "react": "yarn workspace @jsxui/react",
    "site": "yarn workspace site"
  },
  "devDependencies": {
    "@babel/core": "^7.15.4",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "babel-jest": "^27.1.0",
    "babel-plugin-tester": "^10.1.0",
    "babel-test": "^0.2.4",
    "esbuild": "^0.12.25",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "npm-dts": "^1.3.10",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "turbo": "latest",
    "typescript": "^4.4.2"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
